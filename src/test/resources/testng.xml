<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="OrangeHRM Test Suite" parallel="tests" thread-count="2">
  <listeners>
    <listener class-name="com.orangehrm.listeners.TestListener"/>
  </listeners>

 
  <test name="Chrome Tests">
    <parameter name="browser" value="chrome"/>
    <classes>
      <class name="com.orangehrm.tests.LoginTests"/>
      <class name="com.orangehrm.tests.DashboardTests"/>
      <class name="com.orangehrm.tests.PIMTests"/>
      <class name="com.orangehrm.tests.AdminTests"/>
      <class name="com.orangehrm.tests.LeaveTests"/>
    </classes>
  </test>

  
  <test name="Firefox Tests">
    <parameter name="browser" value="firefox"/>
    <classes>
      <class name="com.orangehrm.tests.LoginTests"/>
      <class name="com.orangehrm.tests.DashboardTests"/>
      <class name="com.orangehrm.tests.PIMTests"/>
      <class name="com.orangehrm.tests.AdminTests"/>
      <class name="com.orangehrm.tests.LeaveTests"/>
    </classes>
  </test>
</suite>
